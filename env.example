# SIH Career Path Environment Variables

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME="SIH Career Path"

# Google Maps API (for college directory maps)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Analytics (optional)
NEXT_PUBLIC_ANALYTICS_ID=your_analytics_id_here
NEXT_PUBLIC_VERCEL_ANALYTICS=true

# Database (if using external database)
DATABASE_URL=your_database_url_here

# Authentication (if implementing auth)
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3000

# External APIs (optional)
OPENAI_API_KEY=your_openai_key_for_enhanced_chatbot
GEMINI_API_KEY=your_gemini_key_for_ai_features

# Notification Services (optional)
PUSH_NOTIFICATION_KEY=your_push_notification_key
EMAIL_SERVICE_KEY=your_email_service_key

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_PWA=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
